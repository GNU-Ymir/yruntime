cores=$(ls midgard/core | grep [.]yr$)
std=$(ls midgard/std | grep [.]yr$)
collection=$(ls midgard/std/collection | grep [.]yr$)
etc=$(ls midgard/etc | grep [.]yr$)


rm -rf /usr/include/ymir
mkdir -p /usr/include/ymir/core
mkdir -p /usr/include/ymir/etc
mkdir -p /usr/include/ymir/std
mkdir -p /usr/include/ymir/std/collection

for i in $etc
do
    cp midgard/etc/$i /usr/include/ymir/etc/
done

for i in $cores
do
    cp midgard/core/$i /usr/include/ymir/core/
done

for i in $std
do
    cp midgard/std/$i /usr/include/ymir/std
done

for i in $collection
do
    cp midgard/std/collection/$i /usr/include/ymir/std/collection
done

cp midgard/*.yr /usr/include/ymir/
