cores=$(find midgard/core | grep [.]yr$)
std=$(find midgard/std | grep [.]yr$)
etc=$(find midgard/etc | grep [.]yr$)


rm -rf /usr/include/ymir
mkdir -p /usr/include/ymir/core
mkdir -p /usr/include/ymir/etc
mkdir -p /usr/include/ymir/std

for i in $etc
do
    cp $i /usr/include/ymir/etc/
done

for i in $cores
do
    cp $i /usr/include/ymir/core/
done

for i in $std
do
    cp $i /usr/include/ymir/std
done

cp midgard/*.yr /usr/include/ymir/
