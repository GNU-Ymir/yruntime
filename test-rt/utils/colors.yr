in colors;

__version NO_COLORS {
    pub enum
    | PURPLE = ""s8
    | BLUE = ""s8
    | YELLOW = ""s8
    | RED = ""s8
    | GREEN = ""s8
    | BOLD = ""s8
    | UNDERLINE = ""s8
    | RESET = ""s8 
     -> Colors;        
} else {
    pub enum
    | PURPLE = "\u{0x001B}[1;35m"s8
    | BLUE = "\u{0x001B}[1;36m"s8
    | YELLOW = "\u{0x001B}[1;33m"s8
    | RED = "\u{0x001B}[1;31m"s8
    | GREEN = "\u{0x001B}[1;32m"s8
    | BOLD = "\u{0x001B}[1;50m"s8
    | UNDERLINE = "\u{0x001B}[4m"s8
    | RESET = "\u{0x001B}[0m"s8
     -> Colors;
}
