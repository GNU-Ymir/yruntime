mod std::char;
import std::algorithm::search;

/**
 * @returns: true if c is a punctuation
 */
pub def isPunctuation (c : c32)-> bool {
    match ['!', '"', '#', '$', '%', '&', '\'', '(', ')', '*', '+', '-', '.', '/', ':', ';', ' ', '?', '@', '[', '\\', ']', '^', '_', '`', '{', '|', '}', '~', '\n', ','].find (c) {
        Ok () => true
            _ => false
    }
}
