in atom;

mod YRTRuntime {class T} {
    pub extern (C) fn _yrt_atomic_monitor_enter (a : T);
    pub extern (C) fn _yrt_atomic_monitor_exit (a : T);
}


pub extern (C) {
    fn _yrt_lock_global ();
    fn _yrt_unlock_global ();
}

pub fn atomicMonitorEnter {class T} (a : T) {
    YRTRuntime!{T}::_yrt_atomic_monitor_enter (a);
}

pub fn atomicMonitorExit {class T} (a : T) {
    YRTRuntime!{T}::_yrt_atomic_monitor_exit (a);
}
