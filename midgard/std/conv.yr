     * mod main;
     * class A {
     *     let i : i32;
     *     pub self (i : i32) with i = i {}
     *     impl Streamable;
     * }
     *
     * assert (A::new (789).to![c8] () == "main::A(789)");
     * =============
     */
    fn if is!{U}{X of c8} to {T of [U], U, F impl Streamable} (a : F)-> [c8] {
        let dmut stream = copy StringStream ();
        a.toStream (alias stream);
        stream []
    }


