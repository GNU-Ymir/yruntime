in comparison;

use std::io;
use std::conv;
use std::algorithm::comparison;

__test {
    assert (min (1, 2) == 1);
    assert (min (9827, 8161) == 8161);
    assert (min (1u16, 2u16) == 1);
    assert (min (9827u64, 8161u64) == 8161);


    assert (min (2, 3, 1, 9, 4) == 1);
    assert (max (2, 3, 1, 9, 4) == 9);
}

__test {
    assert (clamp (10, 5, 9) == 9);
    assert (clamp (3, 5, 9) == 5);
    assert (clamp (7, 5, 9) == 7);
}

__test {
    let v = 1;
    assert (v.among ('r', 2, "test", 1));
}

__test {
    let x = either!{|x| => x > 2} (1, 2, 3);
    assert (x == (3)?);

    let y = either!{|x| => x > 3} (1, 2, 3);
    assert (y == none);
}
